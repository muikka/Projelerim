@model MvcLearning.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Movie</h2>
@using (@Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(false,"Aşağıdaki Hataları Düzeltiniz")
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.DateAdded)
        @Html.TextBoxFor(m => m.Movie.DateAdded, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.DateAdded)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId,new SelectList(Model.Genres,"Id","Name"), "Film Türünü Seçiniz",new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.Movie.NumberInStok)
        @Html.TextBoxFor(m=>m.Movie.NumberInStok,new {@class="form-control"} )
        @Html.ValidationMessageFor(m => m.Movie.NumberInStok)
    </div>

     @Html.HiddenFor(m=>m.Movie.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Ekle</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

