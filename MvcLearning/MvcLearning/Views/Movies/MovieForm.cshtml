@model MvcLearning.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Movie</h2>
@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Name)
        @Html.TextBoxFor(m => m.Movies.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleaseDate)
        @Html.TextBoxFor(m => m.Movies.ReleaseDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.GenreId)
        @Html.DropDownListFor(m => m.Movies.GenreId,new SelectList(Model.Genres,"Id","Name"), "Film Türünü Seçiniz",new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.Movies.NumberInStok)
        @Html.TextBoxFor(m=>m.Movies.NumberInStok,new {@class="form-control"} )
    </div>

     @Html.HiddenFor(m=>m.Movies.Id)

    <button type="submit" class="btn btn-primary">Ekle</button>

}

